{
  "name": "shared",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "pre-commit": "lint-staged",
    "lint": "ts-standard",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc --build --clean && tsc --build tsconfig.build.json --force",
    "test": "jest",
    "test:watch": "jest --watch --runInBand",
    "test:cov": "jest --coverage --runInBand",
    "dev": "tsc-watch"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.3.3",
    "@types/jest": "^28.1.6",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "ts-jest": "^28.0.7",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "ts-standard": {
    "ignore": [
      "build"
    ]
  }
}
