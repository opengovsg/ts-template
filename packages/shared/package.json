{
  "name": "@opengovsg/shared",
  "version": "0.1.0",
  "private": true,
  "main": "./build/index.js",
  "exports": {
    ".": "./build/index.js"
  },
  "scripts": {
    "pre-commit": "lint-staged",
    "lint": "eslint --ext ts,tsx,js,jsx . && prettier -c \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix --ext ts,tsx,js,jsx . && prettier -c --write \"src/**/*.{ts,tsx}\"",
    "build": "tsc --build --clean && tsc --build tsconfig.build.json --force",
    "test": "jest",
    "test:watch": "jest --watch --runInBand",
    "test:cov": "jest --coverage --runInBand",
    "dev": "tsc-watch"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.3.3",
    "@types/jest": "^28.1.6",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.7",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {}
}
