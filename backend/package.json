{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "eslint --ext ts,tsx,js,jsx . && prettier -c \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix --ext ts,tsx,js,jsx . && prettier -c --write \"src/**/*.{ts,tsx}\"",
    "pre-commit": "lint-staged",
    "prebuild": "rimraf build",
    "build": "nest build",
    "preload": "echo ENV=${ENV:-'development'} && dotenv -c ${ENV:-'development'} --",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "dev": "npm run preload -- nest start --watch",
    "debug": "npm run preload -- nest start --debug --watch",
    "start": "nest start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage && sed -i.bak 's/SF:src/SF:backend\\/src/g' coverage/lcov.info",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "env:load": "ENV=${ENV:-'development'} node scripts/env/loader.mjs",
    "env:put": "ENV=${ENV:-'development'} node scripts/env/putter.mjs"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.7",
    "@nestjs/core": "^9.0.7",
    "@nestjs/platform-express": "^9.0.7",
    "@nestjs/sequelize": "^9.0.0",
    "@nestjs/serve-static": "^3.0.0",
    "@nestjs/terminus": "^9.1.0",
    "aws-sdk": "^2.1185.0",
    "convict": "^6.2.3",
    "dotenv": "^16.0.1",
    "express-session": "^1.17.3",
    "helmet": "^5.1.1",
    "nodemailer": "^6.7.7",
    "otplib": "^12.0.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "sequelize": "^6.21.3",
    "sequelize-typescript": "^2.1.3",
    "sqlite3": "^5.0.11"
  },
  "devDependencies": {
    "@aws-sdk/client-ssm": "^3.138.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.7",
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.5",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^28.1.6",
    "@types/node": "*",
    "@types/nodemailer": "^6.4.4",
    "@types/sequelize": "^4.28.14",
    "@types/supertest": "^2.0.12",
    "dotenv-cli": "^6.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  }
}