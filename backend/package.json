{
  "name": "@opengovsg/ts-template",
  "version": "1.0.0",
  "description": "A template for most TypeScript projects in OGP",
  "author": "Open Government Products, GovTech Singapore (https://open.gov.sg)",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext ts,tsx,js,jsx .",
    "lint:fix": "eslint --fix --ext ts,tsx,js,jsx .",
    "pre-commit": "lint-staged",
    "prebuild": "rimraf build",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage && sed -i.bak 's/SF:src/SF:backend\\/src/g' coverage/lcov.info",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.1.2",
    "@nestjs/core": "^8.4.2",
    "@nestjs/platform-express": "^8.1.2",
    "@nestjs/sequelize": "^8.0.0",
    "@nestjs/terminus": "^8.0.1",
    "aws-sdk": "^2.1015.0",
    "convict": "^6.2.1",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "nodemailer": "^6.7.0",
    "otplib": "^12.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "sequelize": "^6.8.0",
    "sequelize-typescript": "^2.1.1",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.1.2",
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.4",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/nodemailer": "^6.4.4",
    "@types/sequelize": "^4.28.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^26.5.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  }
}
